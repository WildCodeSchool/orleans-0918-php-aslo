{% extends 'layout.html.twig' %}

{% block style %} /assets/css/events.css {% endblock %}

{% block content %}

<h1 class="text-center">EvÃ©nements</h1>

<div class="events container">
    <div class="row">

    {% for event in events %}
         
          <div class="card text-center col-xl-4 col-ms-6 col-xs-12">
          
             <div class="card-body">
             <div class="row">
               
                    <div class="col-12">
                        <img class="img-thumbnail" src=
                        {% if event.image_url %}
                                "assets/images/events/{{ event.image_url }}"
                            {% else %}
                                "assets/images/event_default.jpg"
                            {% endif %}
                        alt="" />
                    </div>
                    
                    <div class="col-md-12 col-sm-12 my-auto">
                        <h4>{{ event.title }}</h4>
                        <div class="separator"></div>
                        <p class="card-text">{{ event.content }}</p>
                            {% if event.link_url %}
                            <div class="separator"></div>
                            <div class="text-center">
                                <a class="btn btn-outline-white btn-lg" href="{{ event.link_url }}">Lien vers la suite de l'article</a>  
                            </div>
                            {% endif %}
                    </div>
                    

                </div>
            </div>

        </div>
    {% endfor %}
    </div>  
    
</div>
{% endblock %}
